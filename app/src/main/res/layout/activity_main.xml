<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewQn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read Up On Materials Before Class"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subQn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Did I Achieve this goal today?"
            android:textSize="30sp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="18sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewQn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arrive on time so as not to miss important part of the lesson"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subQn2"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="Did I Achieve this goal today?"
            android:textSize="30sp" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="18sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewQn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attempt the problem myself"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subQn3"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="Did I Achieve this goal today?"
            android:textSize="30sp" />

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radio5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="18sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textViewQn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My personal reflection today"
            android:textSize="30sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="OK" />


    </LinearLayout>

</ScrollView>